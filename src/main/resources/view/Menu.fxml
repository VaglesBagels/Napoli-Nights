<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- ScrollPane to enable scrolling when the content exceeds the visible window size -->
<ScrollPane fx:id="menuScrollPane" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.napolinights.controller.MenuController"
            prefWidth="800.0" prefHeight="600.0" fitToWidth="true" >

    <content>
        <!-- VBox to hold all categories and menu items -->
        <!-- This VBox will be populated dynamically with categories and their respective items -->
        <VBox fx:id="contentAnchorPane" layoutX="10.0" layoutY="10.0" spacing="20.0" prefWidth="800.0"
              style="-fx-background-color: #141415;">
            <!-- Initially empty. Content is dynamically added by the MenuController -->
        </VBox>
    </content>
</ScrollPane>


