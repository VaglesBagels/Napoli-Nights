<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.napolinights.controller.OrderController"
            style="-fx-background-color: #141415;">

    <!-- Home Button in the Top Right Corner -->
    <Button fx:id="homeButton" text="Home" onMouseClicked="#handleHomeButtonClick"
            style="-fx-font-size: 14px; -fx-background-color: white; -fx-font-weight: bold; -fx-text-fill: black;"
            AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10" prefWidth="80" prefHeight="20"/>

    <VBox spacing="10" AnchorPane.topAnchor="50" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">

        <!-- ToolBar to dynamically add category links -->
        <ToolBar fx:id="categoryToolBar" AnchorPane.bottomAnchor="0" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                 style="-fx-background-color: #141415;">
            <!-- Category Hyperlinks will be added here dynamically -->
        </ToolBar>

        <!-- Content Wrapper for Left and Right Sections -->
        <HBox spacing="20" alignment="TOP_LEFT" style="-fx-background-color: #141415; -fx-padding: 0 20 0 0;">

            <!-- Left Section: Menu Items -->
            <VBox prefWidth="600" maxWidth="1200" style="-fx-padding: 10; -fx-background-color: #141415;" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">

                <!-- ScrollPane wrapping the menu items section -->
                <ScrollPane fitToWidth="true" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER" VBox.vgrow="ALWAYS"
                            style="-fx-background-color: #141415;">
                    <TilePane fx:id="menuItemsPane" hgap="20" vgap="20" alignment="CENTER" style="-fx-border-color: #141415; -fx-background-color: #141415;" prefColumns="2">
                        <!-- Menu items will be added dynamically here -->
                    </TilePane>
                </ScrollPane>

            </VBox>

            <!-- Right Section: Order Summary -->
            <VBox spacing="10" style="-fx-padding: 10; -fx-border-color: lightgray; -fx-background-color: #141415;" prefWidth="400">

                <!-- Order Summary Section -->
                <VBox fx:id="orderSection" spacing="10" alignment="CENTER" style="-fx-background-color: #141415;">
                </VBox>

                <!-- Subtotal Section -->
                <Label text="Subtotal (Excl GST)" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
                <Label fx:id="lblSubtotal" text="\$0.00" style="-fx-font-size: 16px; -fx-text-fill: white;"/>

                <!-- GST Section -->
                <Label text="GST" style="-fx-font-size: 16px; -fx-text-fill: grey;"/>
                <Label fx:id="lblGST" text="\$0.00" style="-fx-font-size: 16px; -fx-text-fill: grey;"/>

                <!-- Discount Section -->
                <Label text="Discount" style="-fx-font-size: 16px; -fx-text-fill: grey;"/>
                <Label fx:id="lblDiscount" text="\$0.00" style="-fx-font-size: 16px; -fx-text-fill: grey;"/>

                <!-- Total Price Section -->
                <Label text="Total (Inc GST)" style="-fx-font-size: 25px; -fx-text-fill: white; -fx-font-weight: bold"/>
                <Label fx:id="lblTotalIncGST" text="\$0.00" style="-fx-font-size: 16px; -fx-text-fill: white;"/>

                <!-- Checkout Button -->
                <Button fx:id="checkoutButton" onMouseClicked="#HandleCheckoutButton" text="Checkout" style="-fx-font-size: 18px; -fx-background-color: white; -fx-text-fill: black; -fx-font-weight: bold;" prefWidth="200" prefHeight="50"/>
            </VBox>

        </HBox>
    </VBox>
</AnchorPane>
