<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.*?>

<!-- Define the controller for handling the home button -->
<HBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.napolinights.controller.HeaderController" alignment="CENTER" spacing="20" style="-fx-background-color: #141415; -fx-padding: 10 10 10 10;">

    <!-- Logo aligned to the left, size reduced to 50% -->
    <ImageView fx:id="logoImageView" fitHeight="150.0" fitWidth="140.0" preserveRatio="true">
        <image>
            <Image url="@../com/example/napolinights/images/landing_page/napoli_nights_logo.png" />
        </image>
    </ImageView>

    <!-- Spacer to push the home button to the rightmost corner -->
    <Pane HBox.hgrow="ALWAYS"/>

    <!-- Home Button aligned to the rightmost side -->
    <Button fx:id="homeButton" text="Home" style="-fx-font-size: 14px; -fx-background-color: #84AE87; -fx-font-weight: bold; -fx-text-fill: white;" prefWidth="80" prefHeight="40" onAction="#handleHomeButtonClick"/>

</HBox>
