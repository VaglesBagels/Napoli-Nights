<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<!-- Main layout for the Landing Page using an AnchorPane -->
<AnchorPane style="-fx-background-color: #141415;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.napolinights.controller.LandingPageController">

    <!-- Define all children components within the AnchorPane -->
    <children>

        <!-- VBox used to vertically center the logo, welcome text, and buttons -->
        <VBox alignment="CENTER" layoutY="-86.0" prefWidth="604.0" spacing="20" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

            <!-- Logo Image -->
            <ImageView fx:id="logoImageView" fitHeight="200" fitWidth="248.0" preserveRatio="true" style="-fx-border-color: red; -fx-border-width: 10px; -fx-padding: 10px">
                <image>
                    <Image url="@../com/example/napolinights/images/landing_page/napoli_nights_logo.png" />
                </image>
            </ImageView>

            <!-- HBox to align the background image in the center -->
            <HBox fx:id="imageBox" alignment="CENTER">
                <!-- Background Image -->
                <ImageView fitHeight="400.0" preserveRatio="true" smooth="true">
                    <Image url="@../com/example/napolinights/images/landing_page/hero_image.jpg" />
                </ImageView>
                <ImageView fitHeight="400.0" preserveRatio="true" smooth="true">
                    <Image url="@../com/example/napolinights/images/landing_page/hero_image_2.jpg" />
                </ImageView>
                <ImageView fitHeight="400.0" preserveRatio="true" smooth="true">
                    <Image url="@../com/example/napolinights/images/landing_page/hero_image_3.jpg" />
                </ImageView>
                <ImageView fitHeight="400.0" preserveRatio="true" smooth="true">
                    <Image url="@../com/example/napolinights/images/landing_page/hero_image_4.jpg" />
                </ImageView>
            </HBox>

            <!-- Welcome Message Text, centrally aligned -->
            <Text fx:id="welcomeText" style="-fx-font-size: 20px; -fx-fill: white;" text="Welcome to Napoli Pizza!" />

            <!-- Horizontal Box to align the buttons centrally with equal spacing -->
            <HBox alignment="CENTER" spacing="10">

                <!-- Button to view the menu -->
                <Button fx:id="menuButton" onAction="#handleViewMenu" prefHeight="45.0" prefWidth="136.0" style="-fx-background-color: #84AE87; -fx-text-fill: white;" text="View Menu">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Button>

                <!-- Button to place an order -->
                <Button fx:id="orderButton" onAction="#handleOrder" prefHeight="45.0" prefWidth="136.0" style="-fx-background-color: #84AE87; -fx-text-fill: white;" text="Order Here">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Button>

                <!-- Button for staff/admin access -->
                <Button onAction="#handleAdminAccess" prefHeight="46.0" prefWidth="133.0" style="-fx-background-color: #C6959B; -fx-text-fill: white;" text="Staff">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Button>

            </HBox> <!-- End of button HBox -->

        </VBox> <!-- End of VBox -->

    </children> <!-- End of children components in AnchorPane -->
</AnchorPane>



